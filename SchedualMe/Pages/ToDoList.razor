@page "/ToDoList"
@using System.Globalization
@using SchdeualMe.Models
@inject ApplicationDbContext DbContext
@using Microsoft.EntityFrameworkCore
@using System.Linq

@code {
    private List<TodoItem> todoItems = new();
    private TodoItem newItem = new();

    protected override async Task OnInitializedAsync()
    {
        todoItems = await DbContext.TodoItems.ToListAsync();
    }

    private async Task AddItem()
    {
        newItem.DueDate = newItem.DueDate.Date; // Ensure only the date part is saved
        DbContext.TodoItems.Add(newItem);
        await DbContext.SaveChangesAsync();
        newItem = new TodoItem();
        todoItems = await DbContext.TodoItems.ToListAsync(); // Refresh the list
    }

    private async Task DeleteItem(TodoItem itemToDelete)
    {
        DbContext.TodoItems.Remove(itemToDelete);
        await DbContext.SaveChangesAsync();
        todoItems = await DbContext.TodoItems.ToListAsync(); // Refresh the list
    }
}

<h2>To-Do List</h2>

<div class="mb-3">
    <input placeholder="Title" @bind="newItem.Title" class="form-control" />
    <input placeholder="Description" @bind="newItem.Description" class="form-control" />
    <input type="date" @bind="newItem.DueDate" class="form-control" />
    <button class="btn btn-primary mt-2" @onclick="AddItem">Add</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Complete</th>
        </tr>
    </thead>
    <tbody>
     @foreach (var item in todoItems)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.DueDate.ToString("yyyy-MM-dd", CultureInfo.InvariantCulture)</td>
            <td>
                <input type="checkbox" @bind="item.IsComplete" />
            </td>
            <td>
                <button class="btn btn-danger btn-sm" @onclick="() => DeleteItem(item)">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>
